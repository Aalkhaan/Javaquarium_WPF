<Window
    x:Class="Javaquarium.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Javaquarium"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Javaquarium.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:ViewModel}"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  Menu  -->
        <Grid Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Button
                Width="150"
                Margin="0,0,0,10"
                Command="{Binding NextLapCommand}"
                Content="Next lap" />
            <Button
                Grid.Row="1"
                Width="150"
                Command="{Binding ResetCommand}"
                Content="Reset aquarium" />
        </Grid>

        <!--  Affichage de l'état de l'aquarium  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--  Nombre de tours  -->
            <StackPanel
                Margin="0,0,0,10"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="Lap: " />
                <TextBlock Text="{Binding Lap}" />
            </StackPanel>

            <!--  Nombre d'algues  -->
            <StackPanel
                Grid.Row="1"
                Margin="0,0,0,10"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="Seaweeds: " />
                <TextBlock Text="{Binding NbSeaweeds}" />
            </StackPanel>

            <!--  Liste des poissons  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,0,0,10"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="Fishes: " />

                <ScrollViewer
                    Height="300"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="auto">
                    <TextBlock Margin="0,0,10,0" Text="{Binding FishesDisplay}" />
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
