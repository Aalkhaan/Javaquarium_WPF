<UserControl
    x:Class="Javaquarium.Views.UserControls.Utilities.NumericalTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Javaquarium.Views.UserControls.Utilities"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel
        Height="20"
        VerticalAlignment="Top"
        Orientation="Horizontal">
        <Button
            x:Name="cmdDown"
            Width="20"
            x:FieldModifier="private"
            Click="Down_Click"
            Content="▼"
            FontSize="10" />
        <TextBox
            x:Name="txtBox"
            MinWidth="30"
            HorizontalContentAlignment="Center"
            Text="0"
            TextChanged="Num_TextChanged" />
        <Button
            x:Name="cmdUp"
            Width="20"
            x:FieldModifier="private"
            Click="Up_Click"
            Content="▲"
            FontSize="10" />
    </StackPanel>
</UserControl>
